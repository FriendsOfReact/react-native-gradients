{
  "name": "react-native-gradients",
  "version": "2.1.1",
  "description": "A simple gradient library for React Native.",
  "author": "Berkay Yildiz",
  "license": "MIT",
  "keywords": [
    "react-component",
    "react-native",
    "ios",
    "android",
    "linear-gradient",
    "radial-gradient",
    "gradient"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/FriendsOfReact/react-native-gradients"
  },
  "types": "dist/typescript/index.d.ts",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext .ts,.tsx src",
    "build": "bob build"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "dependencies": {
    "react-native-svg": ">=13.2.0"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.1.0",
    "@types/react": "~18.0.15",
    "@types/react-native": "^0.70.0",
    "eslint": "^8.25.0",
    "prettier": "^2.7.1",
    "react-native-builder-bob": "^0.20.0",
    "typescript": "^4.8.4"
  }
}
